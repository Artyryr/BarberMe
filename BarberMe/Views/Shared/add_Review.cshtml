@model Review
<form asp-action="BarberPage" method="post">
    <input type="hidden" asp-for="@Model.BarberId">
    <input type="hidden" asp-for="@Model.Date" value="@DateTime.Now">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="@Model.Rating">Рейтинг</label>
                <input type="number" asp-for="@Model.Rating" class="form-control" min="1" max="5" value="5" required data-val="true" data-val-required="Введите Рейтинг.">
                <span asp-validation-for="@Model.Rating" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="@Model.UserName">Имя Комментатора</label>
                <input asp-for="@Model.UserName" type="text" class="form-control" placeholder="Отображаемое Имя" required data-val="true" data-val-required="Введите E-mail." />
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="@Model.Email">E-mail</label>
                <input asp-for="@Model.Email" type="text" class="form-control" placeholder="E-mail" required data-val="true" data-val-required="Введите E-mail." />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="@Model.Description">Отзыв</label>
                <textarea asp-for="@Model.Description" class="form-control" rows="5" placeholder="Отзыв"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6 mt-3 text-center">
            <div class="form-group">
                <input type="submit" value="Опубликовать" class="btn btn-primary py-3 px-5 text-center">
            </div>
        </div>
        <div class="col-md-6 mt-3 text-center">
            <div class="form-group">
                <input type="reset" value="Сбросить" class="btn btn-primary py-3 px-5 text-center">
            </div>
        </div>
    </div>
    <hr />
</form>