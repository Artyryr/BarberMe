@model ServicesPageModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewBag.Image = "url('/images/Barbers.jpg')";
    ViewBag.Title = "Сервисы";
    ViewBag.PageName = "Сервисы";
    ViewBag.Color = "bg-light";
    ViewBag.Container = "container";
}

<section class="ftco-section bg-light">
    <div class="container text-center">
        <div class="row justify-content-center mb-2">
            <div class="col-md-10 text-center heading-section ftco-animate">
                <h2 class="text-dark">Cервисы</h2>
            </div>
            <div class="col-md-12 mt-3">
                <div class="form-group">
                    <a class="btn btn-primary py-3 px-5 text-center" asp-action="AddService" asp-route-id="@Model.Barbershop.BarbershopId">Добавить Сервис</a>
                </div>
            </div>
            @{
                foreach (var service in Model.Services)
                {
                    <div class="col-md-4">
                        <a asp-action="EditService" asp-route-id="@service.ServiceId">
                            <hr />
                            <div class="row justify-content-center mb-4">
                                <div class="col-md-12 text-dark">
                                    @service.ServiceName
                                </div>
                                <div class="col-md-6">
                                    @service.ServicePrice грн.
                                </div>
                                <div class="col-md-6">
                                    @service.ServiceDuration мин.
                                </div>
                                @if (service.ServiceDescription != null && service.ServiceDescription != "")
                                {
                                    <div class="col-md-12">
                                        @service.ServiceDescription
                                    </div>
                                }
                            </div>
                            <hr />
                        </a>
                    </div>
                }
            }
        </div>
    </div>
</section>
