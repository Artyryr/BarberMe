@model BarbersPageModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewBag.Image = "url('/images/Barbers.jpg')";
    ViewBag.Title = "Барберы";
    ViewBag.PageName = "Барберы";
    ViewBag.Color = "bg-light";
    ViewBag.Container = "container";
}

<section class="ftco-section bg-light">
    <div class="container text-center">
        <div class="row justify-content-center mb-4">
            <div class="col-md-10 text-center heading-section ftco-animate">
                <h2 class="text-dark">Барберы</h2>
            </div>
            <div class="col-md-12 mt-3">
                <div class="form-group">
                    <a class="btn btn-primary py-3 px-5 text-center" asp-action="AddBarberPage" asp-route-id="@Model.Barbershop.BarbershopId">Добавить Барбера</a>
                </div>
            </div>
            @{
                foreach (var barber in Model.Barbers)
                {
                    <div class="col-md-6">
                        <hr />
                        <div class="row justify-content-center mb-4">
                            <div class="col-md-3">
                                <img src="~/images/Barbers/@barber.PhotoLink" class="rounded-circle" style="max-width: 200px; max-height: 200px;" />
                            </div>
                            <div class="col-md-9">
                                <div class="text-dark" style="font-size:25px;">@barber.LastName @barber.FirstName</div>
                                <div class="text-dark">@barber.Telephone</div>
                                <div class="text-dark">@barber.Email</div>
                                <div class="row justify-content-center mb-4">
                                    @if (barber.Instagram != null)
                                    {
                                        <div class="col-md-6 text-center">
                                            <img src="~/images/Instagram.png" class="img-fluid" style="max-height: 30px;">
                                        </div>
                                    }
                                    @if (barber.Facebook != null)
                                    {
                                        <div class="col-md-6 text-center">
                                            <img src="~/images/Facebook.png" class="img-fluid" style="max-height: 30px;">
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <hr />
                    </div>
                }
            }
        </div>
    </div>
</section>
