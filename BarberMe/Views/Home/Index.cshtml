@using BarberMe.Models
@using BarberMe.Models.Classes
@using BarberMe.Models.Database
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>BarberMe</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <environment names="Development">
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

        <link rel="stylesheet" type="text/css" href="~/css/open-iconic-bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="~/css/animate.css">

        <link rel="stylesheet" type="text/css" href="~/css/owl.carousel.min.css">
        <link rel="stylesheet" type="text/css" href="~/css/owl.theme.default.min.css">
        <link rel="stylesheet" type="text/css" href="~/css/magnific-popup.css">

        <link rel="stylesheet" type="text/css" href="~/css/aos.css">

        <link rel="stylesheet" type="text/css" href="~/css/ionicons.min.css">

        <link rel="stylesheet" type="text/css" href="~/css/bootstrap-datepicker.css">
        <link rel="stylesheet" type="text/css" href="~/css/jquery.timepicker.css">


        <link rel="stylesheet" type="text/css" href="~/css/flaticon.css">
        <link rel="stylesheet" type="text/css" href="~/css/icomoon.css">
        <link rel="stylesheet" type="text/css" href="~/css/style.css">
        <link rel="stylesheet" type="text/css" href="~/css/search.css">
    </environment>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
        <div class="container">
            <a class="navbar-brand" asp-action="Index" asp-controller="Home">BarberMe</a>
            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav ml-auto">
                    @*<li class="nav-item active"><a asp-action="Index" asp-controller="Home" class="nav-link">Home</a></li>*@
                        @*<li class="nav-item"><a asp-action="LoginPage" asp-controller="Home" class="nav-link">Login</a></li>*@
                </ul>
            </div>
        </div>
    </nav>

    <section class="home-slider owl-carousel">
        <div class="slider-item" style="background-image: url('/images/bg_1.jpg');">
            <div class="container">
                <div class="row slider-text align-items-center justify-content-center text-center">
                    <div class="col-md-10 ftco-animate">
                        <h1 class="mb-0">Услуга за 1 Клик!</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="ftco-section bg-dark" >
        <div class="container text-center">
            <div class="row justify-content-center mb-4">
                <div class="col-md-10 text-center heading-section ftco-animate">
                    <h2 class="text-light">Выберите свой тип</h2>
                </div>
                <div class="col-md-6 text-center">
                    <a asp-action="CustomerIndex">
                        <h2 class="text-light">Клиент</h2>
                        <img src="~/images/client2.png" class="img-fluid" >
                    </a>
                </div>
                <div class="col-md-6 text-center">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="BarbershopIndex">
                            <h2 class="text-light">Барбершоп</h2>
                            <img src="~/images/barbershop.jpeg" class="img-fluid">
                        </a>
                    }
                    else
                    {
                        <a asp-action="LoginPage">
                            <h2 class="text-light">Барбершоп</h2>
                            <img src="~/images/barbershop.jpeg" class="img-fluid">
                        </a>
                    }

                </div>
            </div>
        </div>
    </section>

    <footer class="footer-main ftco-bg-dark text-center">
        <div class="row">
            <div class="col-lg-12 text-center">
                BarberMe 2019 - Copyright &copy Created By Artur Fundukyan
            </div>
        </div>
    </footer>

    <environment class="Development">
        <script src="~/js/jquery.min.js"></script>
        <script src="~/js/jquery-migrate-3.0.1.min.js"></script>
        <script src="~/js/popper.min.js"></script>
        <script src="~/js/bootstrap.min.js"></script>
        <script src="~/js/jquery.easing.1.3.js"></script>
        <script src="~/js/jquery.waypoints.min.js"></script>
        <script src="~/js/jquery.stellar.min.js"></script>
        <script src="~/js/owl.carousel.min.js"></script>
        <script src="~/js/jquery.magnific-popup.min.js"></script>
        <script src="~/js/aos.js"></script>
        <script src="~/js/jquery.animateNumber.min.js"></script>
        <script src="~/js/main.js"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    </environment>
</body>
</html>
