@model Barbershop
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewBag.Image = "url('/images/Barbershops/" + Model.PhotoLink + "')";
    ViewBag.Title = Model.Name;
    ViewBag.PageName = Model.Name;
    ViewBag.Color = "bg-dark";
    ViewBag.Container = "container";
}

<section class="ftco-section bg-dark">
    <section class="ftco-section bg-dark">
        <div class="container text-center">
            <div class="row justify-content-center mb-4">
                <div class="col-md-10 text-center heading-section ftco-animate">
                    <h2 class="text-light">Функии</h2>
                </div>
                <div class="col-md-6 text-center">
                    <a asp-action="OrdersPage" asp-route-id="@Model.BarbershopId">
                        <h2 class="text-light">Заказы</h2>
                        <img src="~/images/Orders.png" class="img-fluid">
                    </a>
                    <hr />
                </div>
                <div class="col-md-6 text-center">
                    <a asp-action="SchedulePage" asp-route-id="@Model.BarbershopId">
                        <h2 class="text-light">Управление графиком работы</h2>
                        <img src="~/images/Schedule.png" class="img-fluid">
                    </a>
                    <hr />
                </div>
                <div class="col-md-6 text-center">
                    <a asp-action="ServicesPage" asp-route-id="@Model.BarbershopId">
                        <h2 class="text-light">Управление услугами</h2>
                        <img src="~/images/Services.png" class="img-fluid">
                    </a>
                    <hr />
                </div>
                <div class="col-md-6 text-center">
                    <a asp-action="BarbersPage" asp-route-id="@Model.BarbershopId">
                        <h2 class="text-light">Управление барберами</h2>
                        <img src="~/images/Barbers.jpg" class="img-fluid">
                    </a>
                    <hr />
                </div>
                <div class="col-md-6 text-center">
                    <a asp-action="BarbershopInfo" asp-route-id="@Model.BarbershopId">
                        <h2 class="text-light">Информация про барбершоп</h2>
                        <img src="~/images/Info.png" class="img-fluid">
                    </a>
                </div>
                <div class="col-md-6 text-center">
                    <a asp-action="BarbershopPage" asp-route-id="@Model.BarbershopId">
                        <h2 class="text-light">Страница барбершопа</h2>
                        <img src="~/images/barbershop.jpeg" class="img-fluid" style="max-height: 400px">
                    </a>
                </div>
            </div>
        </div>
    </section>
</section>