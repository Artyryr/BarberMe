@model Barbershop
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_customerLayout";
    ViewBag.Image = "url('/images/Barbershops/" + Model.PhotoLink + "')";
    ViewBag.Title = Model.Name;
    ViewBag.PageName = Model.Name;
    ViewBag.Color = "bg-light";
    ViewBag.Container = "container";
}

<section class="ftco-section bg-light">
    <div class="text-center bg-light">
        <div class="row justify-content-center mb-2 pb-2">
            <div class="col-md-10 text-center heading-section ftco-animate">
                <h1 class="text-dark text-capitalize" style="font-size:60px;">@Model.Name</h1>
            </div>
        </div>
    </div>
    <div class="row justify-content-center mb-4">
        <div class="col-md-6 bg-dark">
            <div class="row justify-content-center mb-4 text-center">
                <div class="col-md-12">
                    <hr style="color: white" />
                    <h2 class="text-white col-md-12 text-center">Описание</h2>
                    <hr style="color: white" />
                </div>
                <p class="text-center text-white" style="font-size:25px;">
                    @Model.Description
                </p>
            </div>
        </div>
        <div class="col-md-6 text-center bg-light">
            <div class="row justify-content-center mb-4">
                <div class="col-md-12">
                    <hr />
                    <h2 class="text-dark  text-center">Контактная информация</h2>
                    <hr />
                </div>

                <div class="col-3 text-dark " style="font-size:25px;">Адресс:</div>
                <div class="col-md-9 text-dark" style="font-size:25px;">@Model.Address</div>
                <div class="col-3 text-dark " style="font-size:25px;">Телефон:</div>
                <div class="col-md-9 text-dark " style="font-size:25px;">@Model.Telephone</div>
                <div class="col-3 text-dark " style="font-size:25px;">E-mail:</div>
                <div class="col-md-9 text-dark " style="font-size:25px;">@Model.Email</div>

                <div class="col-md-12">
                    <hr />
                    <h2 class="text-dark col-md-12 text-center">Социальные сети</h2>
                    <hr />
                </div>
                @if (Model.Instagram != null)
                {
                    <div class="col-md-6 text-center">
                        <a href="@Model.Instagram">
                            <img src="~/images/Instagram.png" class="img-fluid" style="max-height: 50px;">
                        </a>
                    </div>
                }
                @if (Model.Facebook != null)
                {
                    <div class="col-md-6 text-center">
                        <a href="@Model.Facebook">
                            <img src="~/images/Facebook.png" class="img-fluid" style="max-height: 50px;">
                        </a>
                    </div>
                }
                @if (@Model.Geoposition != null)
                {
                    <div class="col-md-12 text-center">
                        <hr />
                        @Html.Raw(Model.Geoposition);
                    </div>
                }
            </div>
        </div>

        <div class="col-md-12 mt-3 text-center">
            <div class="form-group">
                <a class="btn btn-primary py-3 px-5 text-center" asp-action="ServiceBookingPage">Запись Онлайн</a>
            </div>
        </div>

        <div class="col-md-6 text-center bg-light">
            <div class="col-md-12">
                <hr />
                <h2 class="text-dark col-md-12 text-center">Барберы</h2>
                <hr />
            </div>

            @{
                foreach (var barber in Model.Barbers)
                {

                    <div class="col-md-12">
                        <div class="row justify-content-center mb-4">
                            <div class="col-md-3">
                                <img src="~/images/Barbers/@barber.PhotoLink" class="rounded-circle" style="max-width: 200px; max-height: 200px;" />
                            </div>
                            <div class="col-md-9">
                                <div class="text-dark" style="font-size:25px;">@barber.LastName @barber.FirstName</div>
                                <div class="text-dark">@barber.Telephone</div>
                                <div class="text-dark">@barber.Email</div>
                                <div class="row justify-content-center mb-4">
                                    @if (barber.Instagram != null)
                                    {
                                        <div class="col-md-6 text-center">
                                            <a href="@barber.Instagram">
                                                <img src="~/images/Instagram.png" class="img-fluid" style="max-height: 30px;">
                                            </a>
                                        </div>
                                    }
                                    @if (barber.Facebook != null)
                                    {
                                        <div class="col-md-6 text-center">
                                            <a href="@barber.Facebook">
                                                <img src="~/images/Facebook.png" class="img-fluid" style="max-height: 30px;">
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <hr />
                    </div>
                }
            }
        </div>


        @{
            if (Model.Services != null)
            {
                <div class="col-md-6 bg-dark">
                    <div class="row justify-content-center mb-4 text-center">
                        <div class="col-md-12">
                            <hr style="color: white" />
                            <h2 class="text-white text-center">Услуги</h2>
                            <hr style="color: white" />
                        </div>

                        @foreach (var service in Model.Services)
                        {
                            <div class=" col-md-12">
                                <hr style="color: white"/>
                                <h3 class="text-white text-center">
                                    @service.ServiceName
                                </h3>
                            </div>

                            <div class="col-md-12 text-light " style="font-size:25px;">@service.ServiceDescription</div>
                            <div class="col-md-3 text-light text-center" style="font-size:20px;">Длительность: </div>
                            <div class="col-md-3 text-primary " style="font-size:20px;"> @service.ServiceDuration мин.</div>
                            <div class="col-md-3 text-light text-center" style="font-size:20px;">Цена: </div>
                            <div class="col-md-3 text-primary " style="font-size:20px;"> @service.ServicePrice грн.</div>
                        }
                    </div>
                </div>
            }
        }
    </div>
</section>