@model ServiceBookingModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_customerLayout";
    ViewBag.Image = "url('/images/Info.png')";
    ViewBag.Title = "Бронирование услуги";
    ViewBag.PageName = "Бронирование услуги";
    ViewBag.Color = "bg-light";
    ViewBag.Container = "container";
}

<section class="ftco-section bg-light">
    <div class="container-fluid text-center">
        <div class="row justify-content-center mb-4">
            <div class="col-md-12 text-center heading-section ftco-animate">
                <h2 class="text-dark">Бронирование услуги</h2>
            </div>
            <div class="col-md-12 text-center heading-section ftco-animate">

                <form id="BarberForm" asp-action="SelectBarber" method="get">
                    <input asp-for="@Model.BarbershopId" type="hidden" />
                    <input asp-for="@Model.BarberId" type="hidden" />
                    <input asp-for="@Model.ServiceId" type="hidden" />
                    <input asp-for="@Model.ScheduleId" type="hidden" />

                    <a onclick="document.getElementById('BarberForm').submit();">
                        <div class="row justify-content-center mb-4">
                            <div class="col-md-8 text-center">
                                <hr />
                                <div>
                                    <h3>Барберы</h3>
                                </div>

                                @if (Model.Barber != null)
                                {
                                    <hr />
                                    <div class="row justify-content-center mb-4">
                                        <div class="col-md-3">
                                            <img src="~/images/Barbers/@Model.Barber.PhotoLink" class="rounded-circle" style="max-width: 200px; max-height: 200px;" />
                                        </div>
                                        <div class="col-md-3">
                                            <div class="text-primary" style="font-size:25px;">@Model.Barber.LastName @Model.Barber.FirstName</div>
                                            <div class="text-dark">@Model.Barber.Telephone</div>
                                            <div class="text-dark">@Model.Barber.Email</div>
                                            <div class="row justify-content-center mb-4">
                                                @if (@Model.Barber.Instagram != null && @Model.Barber.Facebook != "")
                                                {
                                                    <div class="col-md-6 text-center">
                                                        <a href="@Model.Barber.Instagram">
                                                            <img src="~/images/Instagram.png" class="img-fluid" style="max-height: 30px;">
                                                        </a>
                                                    </div>
                                                }
                                                @if (@Model.Barber.Facebook != null && @Model.Barber.Facebook != "")
                                                {
                                                    <div class="col-md-6 text-center">
                                                        <a href="@Model.Barber.Facebook">
                                                            <img src="~/images/Facebook.png" class="img-fluid" style="max-height: 30px;">
                                                        </a>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                                <hr />
                            </div>
                        </div>
                    </a>
                </form>

                <form id="ServiceForm" asp-action="SelectService" method="get">
                    <input asp-for="@Model.BarbershopId" type="hidden" />
                    <input asp-for="@Model.BarberId" type="hidden" />
                    <input asp-for="@Model.ServiceId" type="hidden" />
                    <input asp-for="@Model.ScheduleId" type="hidden" />

                    <a onclick="document.getElementById('ServiceForm').submit();">
                        <div class="row justify-content-center mb-4">
                            <div class="col-md-8 text-center">
                                <hr />
                                <div>
                                    <h3>Услуга</h3>
                                </div>

                                @if (Model.Service != null)
                                {
                                    <div class="col-md-12">
                                        <hr />
                                        <div class="row justify-content-center mb-4">
                                            <div class="col-md-12 text-dark">
                                                @Model.Service.ServiceName
                                            </div>
                                            <div class="col-md-6 text-primary">
                                                @Model.Service.ServicePrice грн.
                                            </div>
                                            <div class="col-md-6 text-primary">
                                                @Model.Service.ServiceDuration мин.
                                            </div>
                                            @if (Model.Service.ServiceDescription != null && Model.Service.ServiceDescription != "")
                                            {
                                                <div class="col-md-12">
                                                    @Model.Service.ServiceDescription
                                                </div>
                                            }
                                        </div>
                                        @*<hr />*@
                                    </div>
                                }
                                <hr />
                            </div>
                        </div>
                    </a>
                </form>

                @if (Model.ServiceId != null && Model.ServiceId != 0 && Model.BarberId != null && Model.BarberId != 0)
                {
                    <form id="ScheduleForm" asp-action="SelectSchedule" method="get">
                        <input asp-for="@Model.BarbershopId" type="hidden" />
                        <input asp-for="@Model.BarberId" type="hidden" />
                        <input asp-for="@Model.ServiceId" type="hidden" />
                        <input asp-for="@Model.ScheduleId" type="hidden" />

                        <a onclick="document.getElementById('ScheduleForm').submit();">
                            <div class="row justify-content-center mb-4">
                                <div class="col-md-8 text-center">
                                    <hr />
                                    <h3>Время и Дата</h3>

                                    @if (Model.Schedule != null)
                                    {
                                        <div class="col-md-12">
                                            <hr />
                                            <div class="row justify-content-center mb-4">
                                                <div class="col-md-12 text-dark">
                                                    @Model.Service.ServiceName
                                                </div>
                                                <div class="col-md-6">
                                                    @Model.Service.ServicePrice грн.
                                                </div>
                                                <div class="col-md-6">
                                                    @Model.Service.ServiceDuration мин.
                                                </div>
                                                @if (Model.Service.ServiceDescription != null && Model.Service.ServiceDescription != "")
                                                {
                                                    <div class="col-md-12">
                                                        @Model.Service.ServiceDescription
                                                    </div>
                                                }
                                            </div>
                                            <hr />

                                        </div>
                                    }
                                    <hr />
                                </div>
                            </div>
                        </a>
                    </form>
                }

                <div class="col-md-12 text-center">
                    <div class="form-group">
                        @if (Model.ServiceId != null && Model.ServiceId != 0 && Model.BarberId != null && Model.BarberId != 0
                          && Model.ScheduleId != null && Model.ScheduleId != 0)
                        {
                            <a class="btn btn-primary py-3 px-5 text-center" asp-route-model="@Model">Оформить визит</a>
                        }
                        else
                        {
                            <div class="btn btn-primary py-3 px-5 text-center disabled">Оформить визит</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
