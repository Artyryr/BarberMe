@model SearchModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_customerLayout";
    ViewBag.Image = "url('/images/bg_1.jpg')";
    ViewBag.Title = "Барбершопы";
    ViewBag.PageName = "Барбершопы";
    ViewBag.Color = "bg-dark";
    ViewBag.Container = "container";
}

<section class="ftco-section bg-dark">
    <div class=" text-center">
        <div class="row justify-content-center mb-2">
            <div class="col-md-10 text-center heading-section ftco-animate bg-light rounded">
                <h2 class="text-dark">Поиск</h2>
                @Html.Partial("_searchBarView", new SearchModel())
            </div>
            @if (Model.SearchCriteria == "barbershop")
            {
                @if (Model.Barbershops.Count() != 0)
                {
                    @foreach (var barbershop in Model.Barbershops)
                    {
                        <div class="col-md-5 ml-2 mt-2 mr-2 mb-2 pt-2 text-center border border-primary bg-light rounded">
                            <a asp-action="BarbershopPage" asp-route-id="@barbershop.BarbershopId">
                                @if (barbershop.PhotoLink != null)
                                {
                                    <img src="~/images/Barbershops/@barbershop.PhotoLink" class="img-fluid rounded" style="max-height: 300px;">
                                }
                                else
                                {
                                    <img src="~/images/Barbershops/NotFound.png" class="img-fluid rounded">
                                }
                                <h2 class="text-dark">@barbershop.Name</h2>
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="col-md-10 text-center heading-section ftco-animate">
                        <h2 class="text-light">Результатов не найдено. Попробуйте еще раз</h2>
                    </div>
                }
            }
            @if (Model.SearchCriteria == "barber")
            {
                @if (Model.Barbers.Count() != 0)
                {
                    @foreach (var barber in Model.Barbers)
                    {
                        <div class="col-md-5 ml-2 mt-2 mr-2 mb-2 pt-2 text-center border border-primary bg-light rounded">
                            <a asp-action="BarbershopPage" asp-route-id="@barber.BarbershopId">
                                @if (barber.PhotoLink != null)
                                {
                                    <img src="~/images/Barbers/@barber.PhotoLink" class="img-fluid rounded" style="max-height: 300px;">
                                }
                                else
                                {
                                    <img src="~/images/Barbershops/NotFound.png" class="img-fluid rounded">
                                }
                                @{}
                                <h2 class=" text-primary">@barber.FirstName @barber.LastName</h2>
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="col-md-10 text-center heading-section ftco-animate">
                        <h2 class="text-light">Результатов не найдено. Попробуйте еще раз</h2>
                    </div>
                }
            }
        </div>
    </div>
</section>